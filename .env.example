# Aggregation
MIN_SOURCES=2
MAX_DEVIATION_PERCENT=5.0
CACHE_TTL_SECONDS=30
REQUEST_TIMEOUT_SECONDS=5

# ========================================
# ML
# ========================================
MODEL_UPDATE_INTERVAL=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.7
