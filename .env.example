# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# Blockchain Configuration
INFURA_API_KEY=your_infura_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/${INFURA_API_KEY}
MAINNET_RPC_URL=https://mainnet.infura.io/v3/${INFURA_API_KEY}
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/${INFURA_API_KEY}

# Wallet (NEVER share private keys!)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
DEPLOYER_ADDRESS=0xYOUR_WALLET_ADDRESS

# Data APIs
COINGECKO_API_KEY=your_coingecko_key  # Optional for free tier
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# IPFS Storage
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Contract Addresses (fill after deployment)
PREDICTION_ORACLE_ADDRESS=
DECAI_TOKEN_ADDRESS=
DECAI_DAO_ADDRESS=

# Contract Verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Application Settings
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database (if using)
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=postgresql://user:password@localhost:5432/decai

# Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# API Rate Limiting
RATE_LIMIT_FREE=100  # requests per day
RATE_LIMIT_DEVELOPER=10000
RATE_LIMIT_PROFESSIONAL=100000

# ML Model Settings
MODEL_UPDATE_INTERVAL=3600  # seconds
PREDICTION_CONFIDENCE_THRESHOLD=0.7
SUPPORTED_ASSETS=BTC,ETH,SOL,MATIC

# Security
JWT_SECRET_KEY=your_random_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_IPFS=false
ENABLE_MULTI_CHAIN=false
ENABLE_ZK_PROOFS=false
ENABLE_FEDERATED_LEARNING=false
